foreground = ${xrdb:foreground:#222}
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/burs]
;monitor = ${env:MONITOR:eDP1}
width = 1905
height = 32
offset-x = 8
offset-y = 8
radius = 0.0
fixed-center = true

background = ${xrdb:background}
foreground = ${xrdb:foreground:#FF0000}

line-size = 4
line-color = #f00

border-size = 4
border-color = ${xrdb:color8:#FF000000}

padding-left = 0
padding-right = 3

